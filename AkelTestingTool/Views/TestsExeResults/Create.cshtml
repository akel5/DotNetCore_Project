@model AkelTestingTool.Models.TestsExeResults

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>TestsExeResults</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"      enctype="multipart/form-data"     >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestExcutionsTEId" class="control-label"></label>
                <select asp-for="TestExcutionsTEId" class="form-control" asp-items="ViewBag.TestExcutionsTEId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TestCasesTCId" class="control-label"></label>
                <select asp-for="TestCasesTCId" class="form-control" asp-items="ViewBag.TestCasesTCId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTestsTId" class="control-label"></label>
                <select asp-for="ProjectTestsTId" class="form-control" asp-items="ViewBag.ProjectTestsTId"></select>
            </div>
           


            <div class="form-group">
                <label asp-for="Result" class="control-label"></label>
                <input asp-for="Result" class="form-control" />
                <span asp-validation-for="Result" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl2" class="control-label"></label>
                <input type="file" name="myfile" id="file" accept=".png,.jpg,.jpeg,.gif,.tif" class="btn btn-default" />
                <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                <input asp-for="ImageUrl2" id="fileinput" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />


                @* <a asp-action="Index" asp-route-id="@ViewBag.id3" asp-route-id2="@ViewBag.id4">Create</a>*@
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index/@ViewBag.id3/@ViewBag.id4">Back to List</a>
</div>



@section Scripts {
   
    <script>
$(document).ready(function () {
            $("#file").change(function () {
                if ($("#file").val() != "") {
                    $("#fileinput").prop("value", $("#file").val().split('\\').pop());
                }
            });
        });</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}