@model IEnumerable<AkelTestingTool.Models.BugsSummary>

@{
    ViewData["Title"] = "Home Page";
}

<style>

    .low {
        display: flex;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }
</style>
<div class="low">
    <h3 class="title"><br><br><b> Start Here To Learn How To Use The App </b></h3>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/core2.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Welcome
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core22.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Welcome to the perfect testing management solution app in the world, here you can manage your tests by projects, tests for each projects, Scenario for each test & Test executions, This solution can serves Testers & Developers by the easiest way, There is a lot of features to make it easy to use, Thank you for choosing our testing tool.

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core22.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <b>Projects</b>  <br><br>  Here you can create and manage your Projects you work about.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core22.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <b>Tests</b>  <br><br>   Here you can manage the tests for each project.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core22.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <b>Senarios (Test Cases)</b>  <br><br>   Here you can manage the senario (Test Cases) for each test.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core22.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <b>Test Execution Times</b>  <br><br> Here you can manage the test execution times for eatch test
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core22.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <b>Test Executions (Results)</b>  <br><br>  Here you can manage the test executions (Results), you can open a bug in each test case
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core22.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <b>Bugs</b>  <br><br>  Here you can manage the bugs
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/core2.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Thank You !... And Welcome.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">

    <style>

        .low {
            display: flex;
            justify-content: center;
            flex-direction: column;
            text-align: center;
        }
    </style>
    <div class="low">
        <h3 class="title"><br><br><b> Last Bugs </b></h3>
    </div>

    @foreach (var item in Model)
    {
        <div class="col-md-4 text-center">
            <div class="thumbnail">
                <img class="img-rounded" width="350px" height="236px" src="@Url.Content("~/" + AkelTestingTool.Properties.Resources.ImgFolder + "/" + item.ImageUrl)" />
                <div class="caption">


                    <h3>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Bug)</a>
                    </h3>

                    @*   @Html.Raw(item.Body)*@


                    @Html.Raw(String.Concat(item.BugSummary.Take(550)));
                    <a asp-action="Details" asp-route-id="@item.Id">More</a>
                </div>
            </div>
        </div>
    }
</div>
