@model AkelTestingTool.Models.TestCases

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Test Case</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Test Case Number </b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TestCaseNum)
        </dd>
        <dt>
            <b>Test Case</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TestCase)
        </dd>
        <dt>
            <b>Expected Result</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExpectedResult)
        </dd>

        <dt>
            Project Test
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProjectTests.Test)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TCId" />
        <input type="submit" value="Delete" class="btn btn-default" /> <br /><br />
        <a asp-action="Index/@ViewBag.id160"><img src="@Url.Content("/images/back.png")" title="Back To List" style="width:30px; height: auto; " /></a>
    </form>
</div>
