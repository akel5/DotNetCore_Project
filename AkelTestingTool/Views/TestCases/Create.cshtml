@model AkelTestingTool.Models.TestCases

@{
    ViewData["Title"] = "Create";
}
<h2>Adding Test Case</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b>Project</b>
                <select asp-for="ProjectTestsTId" class="form-control" asp-items="ViewBag.ProjectTestsTId"></select>
            </div>
            <div class="form-group">
                <b>Test Case Number</b>
                <input asp-for="TestCaseNum" class="form-control" />
                <span asp-validation-for="TestCaseNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>Test Case</b>
                <input asp-for="TestCase" class="form-control" />
                <span asp-validation-for="TestCase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>Expected Result</b>
                <input asp-for="ExpectedResult" class="form-control" />
                <span asp-validation-for="ExpectedResult" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index/@ViewBag.id17"><img src="@Url.Content("/images/back.png")" title="Back To List" style="width:30px; height: auto; " /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
